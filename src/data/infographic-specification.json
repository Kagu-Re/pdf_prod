{
  "specification": {
    "version": "1.0.0",
    "name": "Agile Tunnel Infographic Card Specification",
    "description": "Comprehensive specification for creating professional infographic cards with optimal layouts and design elements",
    "lastUpdated": "2025-01-27"
  },
  
  "cardTypes": {
    "hero": {
      "name": "Hero Card",
      "description": "Main title card with primary messaging and visual impact",
      "useCase": "Opening slide, main announcement, key message",
      "dimensions": {
        "width": 1080,
        "height": 1350,
        "aspectRatio": "4:5"
      },
      "elements": {
        "required": ["title", "subtitle", "background", "accent"],
        "optional": ["logo", "tagline", "cta", "decoration"],
        "hierarchy": ["background", "title", "subtitle", "accent", "tagline", "cta", "decoration"]
      }
    },
    
    "content": {
      "name": "Content Card", 
      "description": "Information-focused card with text, data, and supporting visuals",
      "useCase": "Process steps, explanations, data presentation, key points",
      "dimensions": {
        "width": 1080,
        "height": 1350,
        "aspectRatio": "4:5"
      },
      "elements": {
        "required": ["title", "content", "icon", "background"],
        "optional": ["subtitle", "statistics", "dataPoints", "cta", "source"],
        "hierarchy": ["background", "icon", "title", "subtitle", "content", "statistics", "dataPoints", "cta", "source"]
      }
    },
    
    "metric": {
      "name": "Metric Card",
      "description": "Data-focused card highlighting key statistics and KPIs",
      "useCase": "Performance metrics, results, achievements, benchmarks",
      "dimensions": {
        "width": 1080,
        "height": 1350,
        "aspectRatio": "4:5"
      },
      "elements": {
        "required": ["metricValue", "metricLabel", "trend", "background"],
        "optional": ["comparison", "timeframe", "icon", "description", "target"],
        "hierarchy": ["background", "icon", "metricValue", "metricLabel", "trend", "comparison", "timeframe", "description", "target"]
      }
    },
    
    "process": {
      "name": "Process Card",
      "description": "Step-by-step process visualization with clear progression",
      "useCase": "Workflows, methodologies, procedures, how-to guides",
      "dimensions": {
        "width": 1080,
        "height": 1350,
        "aspectRatio": "4:5"
      },
      "elements": {
        "required": ["stepNumber", "title", "description", "background"],
        "optional": ["icon", "subtitle", "duration", "outcome", "nextStep"],
        "hierarchy": ["background", "stepNumber", "icon", "title", "subtitle", "description", "duration", "outcome", "nextStep"]
      }
    },
    
    "comparison": {
      "name": "Comparison Card",
      "description": "Side-by-side comparison of options, before/after, or alternatives",
      "useCase": "Product comparisons, before/after, pros/cons, alternatives",
      "dimensions": {
        "width": 1080,
        "height": 1350,
        "aspectRatio": "4:5"
      },
      "elements": {
        "required": ["title", "optionA", "optionB", "background"],
        "optional": ["comparisonCriteria", "recommendation", "icon", "subtitle"],
        "hierarchy": ["background", "title", "subtitle", "optionA", "optionB", "comparisonCriteria", "recommendation"]
      }
    }
  },
  
  "designSystem": {
    "typography": {
      "fontFamilies": {
        "primary": "Inter, system-ui, sans-serif",
        "secondary": "Georgia, serif",
        "mono": "JetBrains Mono, Consolas, monospace"
      },
      "fontSizes": {
        "hero": { "title": "4rem", "subtitle": "2rem", "body": "1.25rem" },
        "content": { "title": "2.5rem", "subtitle": "1.5rem", "body": "1.125rem" },
        "metric": { "value": "3.5rem", "label": "1.25rem", "body": "1rem" },
        "process": { "title": "2rem", "stepNumber": "1.5rem", "body": "1.125rem" },
        "comparison": { "title": "2rem", "option": "1.5rem", "body": "1rem" }
      },
      "fontWeights": {
        "light": 300,
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800,
        "black": 900
      },
      "lineHeights": {
        "tight": 1.2,
        "normal": 1.5,
        "relaxed": 1.7,
        "loose": 2.0
      }
    },
    
    "colors": {
      "semantic": {
        "primary": "#3B82F6",
        "secondary": "#8B5CF6", 
        "accent": "#F59E0B",
        "success": "#10B981",
        "warning": "#F59E0B",
        "error": "#EF4444",
        "info": "#06B6D4"
      },
      "neutral": {
        "white": "#FFFFFF",
        "gray50": "#F9FAFB",
        "gray100": "#F3F4F6",
        "gray200": "#E5E7EB",
        "gray300": "#D1D5DB",
        "gray400": "#9CA3AF",
        "gray500": "#6B7280",
        "gray600": "#4B5563",
        "gray700": "#374151",
        "gray800": "#1F2937",
        "gray900": "#111827",
        "black": "#000000"
      },
      "gradients": {
        "primary": "linear-gradient(135deg, #3B82F6 0%, #8B5CF6 100%)",
        "success": "linear-gradient(135deg, #10B981 0%, #059669 100%)",
        "warning": "linear-gradient(135deg, #F59E0B 0%, #D97706 100%)",
        "error": "linear-gradient(135deg, #EF4444 0%, #DC2626 100%)",
        "neutral": "linear-gradient(135deg, #6B7280 0%, #374151 100%)"
      }
    },
    
    "spacing": {
      "scale": [0, 0.25, 0.5, 0.75, 1, 1.25, 1.5, 2, 2.5, 3, 4, 5, 6, 8, 10, 12, 16, 20, 24, 32],
      "cardPadding": {
        "small": "1rem",
        "medium": "1.5rem", 
        "large": "2rem",
        "xl": "2.5rem"
      },
      "elementGaps": {
        "tight": "0.5rem",
        "normal": "1rem",
        "relaxed": "1.5rem",
        "loose": "2rem"
      }
    },
    
    "shadows": {
      "card": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "elevated": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "dramatic": "0 25px 50px -12px rgba(0, 0, 0, 0.25)"
    },
    
    "borders": {
      "radius": {
        "none": "0px",
        "sm": "0.125rem",
        "base": "0.25rem",
        "md": "0.375rem",
        "lg": "0.5rem",
        "xl": "0.75rem",
        "2xl": "1rem",
        "3xl": "1.5rem",
        "full": "9999px"
      },
      "widths": {
        "thin": "1px",
        "normal": "2px",
        "thick": "4px"
      }
    }
  },
  
  "layoutSystem": {
    "grid": {
      "columns": 12,
      "gutter": "1.5rem",
      "breakpoints": {
        "sm": "640px",
        "md": "768px", 
        "lg": "1024px",
        "xl": "1280px"
      }
    },
    
    "zIndex": {
      "background": 0,
      "content": 10,
      "overlay": 20,
      "modal": 30,
      "tooltip": 40
    },
    
    "composition": {
      "ruleOfThirds": true,
      "goldenRatio": true,
      "verticalRhythm": true,
      "horizontalAlignment": "center",
      "verticalAlignment": "center"
    }
  },
  
  "elementSpecifications": {
    "title": {
      "required": true,
      "maxLength": 60,
      "fontSize": "var(--font-size-title)",
      "fontWeight": "var(--font-weight-bold)",
      "lineHeight": "var(--line-height-tight)",
      "color": "var(--color-text-primary)",
      "margin": "0 0 1rem 0"
    },
    
    "subtitle": {
      "required": false,
      "maxLength": 120,
      "fontSize": "var(--font-size-subtitle)",
      "fontWeight": "var(--font-weight-medium)",
      "lineHeight": "var(--line-height-normal)",
      "color": "var(--color-text-secondary)",
      "margin": "0 0 1.5rem 0"
    },
    
    "content": {
      "required": true,
      "maxLength": 300,
      "fontSize": "var(--font-size-body)",
      "fontWeight": "var(--font-weight-normal)",
      "lineHeight": "var(--line-height-relaxed)",
      "color": "var(--color-text-body)",
      "margin": "0 0 1rem 0"
    },
    
    "icon": {
      "required": false,
      "size": "3rem",
      "color": "var(--color-primary)",
      "background": "transparent",
      "borderRadius": "var(--border-radius-lg)",
      "padding": "0.75rem"
    },
    
    "background": {
      "required": true,
      "type": "gradient|solid|image|pattern",
      "opacity": 1.0,
      "blur": "0px",
      "overlay": false
    },
    
    "statistics": {
      "required": false,
      "format": "number|percentage|currency|ratio",
      "fontSize": "var(--font-size-metric)",
      "fontWeight": "var(--font-weight-extrabold)",
      "color": "var(--color-primary)",
      "decimals": 1
    },
    
    "dataPoints": {
      "required": false,
      "maxItems": 5,
      "format": "bullet|numbered|checklist",
      "fontSize": "var(--font-size-body)",
      "lineHeight": "var(--line-height-normal)",
      "color": "var(--color-text-body)"
    },
    
    "cta": {
      "required": false,
      "maxLength": 30,
      "fontSize": "var(--font-size-button)",
      "fontWeight": "var(--font-weight-semibold)",
      "backgroundColor": "var(--color-primary)",
      "color": "var(--color-white)",
      "borderRadius": "var(--border-radius-lg)",
      "padding": "0.75rem 1.5rem"
    }
  },
  
  "accessibility": {
    "contrastRatio": {
      "minimum": 4.5,
      "enhanced": 7.0
    },
    "textSize": {
      "minimum": "16px",
      "recommended": "18px"
    },
    "altText": {
      "required": true,
      "maxLength": 125
    },
    "focusIndicators": {
      "required": true,
      "color": "var(--color-primary)",
      "width": "2px",
      "style": "solid"
    }
  },
  
  "exportSettings": {
    "formats": ["PDF", "PNG", "JPG", "SVG"],
    "resolutions": {
      "standard": "1080x1350",
      "highDPI": "2160x2700", 
      "retina": "3240x4050"
    },
    "quality": {
      "PDF": "print",
      "PNG": "lossless",
      "JPG": 95
    },
    "colorSpace": "RGB",
    "compression": "optimal"
  },
  
  "validation": {
    "title": {
      "required": true,
      "minLength": 5,
      "maxLength": 60,
      "pattern": "^[a-zA-Z0-9\\s\\-\\.,!?]+$"
    },
    "content": {
      "required": true,
      "minLength": 20,
      "maxLength": 300,
      "readability": "grade8"
    },
    "image": {
      "required": false,
      "maxSize": "5MB",
      "formats": ["PNG", "JPG", "SVG", "WebP"],
      "dimensions": {
        "minWidth": 400,
        "minHeight": 400,
        "aspectRatio": "1:1|4:3|16:9"
      }
    }
  },
  
  "templates": {
    "digitalTransformation": {
      "name": "Digital Transformation Journey",
      "description": "5-step transformation process with hero and content cards",
      "cards": [
        {
          "type": "hero",
          "title": "Digital Transformation Journey",
          "subtitle": "From Problem to Future",
          "background": "gradient",
          "accent": "primary"
        },
        {
          "type": "process",
          "stepNumber": 1,
          "title": "The Problem",
          "description": "Identify current challenges and pain points",
          "icon": "alert-circle",
          "color": "error"
        },
        {
          "type": "process", 
          "stepNumber": 2,
          "title": "The Discovery",
          "description": "Research and analyze solutions",
          "icon": "search",
          "color": "success"
        },
        {
          "type": "process",
          "stepNumber": 3,
          "title": "The Solution", 
          "description": "Implement chosen strategy",
          "icon": "check-circle",
          "color": "primary"
        },
        {
          "type": "process",
          "stepNumber": 4,
          "title": "The Implementation",
          "description": "Execute and monitor progress",
          "icon": "settings",
          "color": "warning"
        },
        {
          "type": "process",
          "stepNumber": 5,
          "title": "The Future",
          "description": "Plan for continued growth",
          "icon": "trending-up",
          "color": "secondary"
        }
      ]
    }
  }
}
